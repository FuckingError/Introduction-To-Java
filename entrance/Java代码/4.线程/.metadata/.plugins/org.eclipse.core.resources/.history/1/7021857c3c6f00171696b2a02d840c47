package 线程;

import javax.swing.plaf.synth.SynthColorChooserUI;

/*
 * 目的：确保苹果香蕉生产后再消费
 * 
 * 要有上锁的意识
 * 锁对象必须是指向同一个对象的对象名
 * 
 * p.wait()
 * p.notify() 
 * p.notifyAll()
 * 必须在同步代码块或同步函数中使用   属于Object类   必须通过锁对象调用
 * 
 * 利用构造方法传入同一个对象
 * 
 * 利用boolean类型判断是否已生产或已消费 ,以及要求先生产后消费
 * 
 * 
 * */
class Product{
	String name;
	double price;
	boolean flag = false;
}

class Productor extends Thread{
	Product p;
	int i = 0;
	
	public Productor(Product p){
		this.p = p;
	}
	
	public void run(){
		
		while(p.flag){
			synchronized (p) {
				if(i/2 == 0){
					System.out.println("生产出苹果");
				}else{
					System.out.println("生产出香蕉");
				}
				i++;
				p.flag = true;
				try {
					p.wait();
				} catch (InterruptedException e) {
					// TODO Auto-generated catch block
					e.printStackTrace();
				}
			}
		}
	}
}

class Customer{
	
}









class Productor extends Thread{
	Product p;
	//传入一个公共的对象
	public Productor (Product p){
		this.p = p;
	}
	
	public void run(){
		int i = 0;
	    while(true){
		synchronized (p) {
			if(p.flag == false){
				if(i%2 == 0){
			p.name = "苹果";
			p.price = 6.5;
			}
		else{
			p.name = "香蕉";
			p.price = 2.0;
			}
		
		System.out.println("生产者生产了"+p.name+"价格为:"+p.price);
		p.flag = true;
		i++;
		p.notify();
		}else{
			try {
				p.wait();
			} catch (InterruptedException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
		}
			}
		}
	 }
}



class Customer extends Thread{
	Product p;
	
	public Customer(Product p){
		this.p = p;
	}
	
	public void run(){
		while(true){
			synchronized (p) {
				if(p.flag == true){
				System.out.println("消费者消费了"+p.name+"价格为:"+p.price);
				p.flag = false;
				p.notify();
			    try {
					p.wait();
				} catch (InterruptedException e) {
					// TODO Auto-generated catch block
					e.printStackTrace();
				}
			    }else{
			    	p.notify();
			    	}
			}
		}
	}
}

public class Demo8 {
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		Product p = new Product();
		
		Productor p1 = new Productor(p);
		Customer c = new Customer(p);
	
		p1.start();
		c.start();

	}
}

